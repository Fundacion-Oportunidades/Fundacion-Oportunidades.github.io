---
const { title, paragraphs, imageUrl } = Astro.props;
---

<section class="container w-screen mx-auto my-5 missionClass"  id={`${title} `}>
  <div class="px-10 max-sm:px-5">
    <div class="flex text-center justify-start ps-5">
      <h2 class="mission-title ">
        {title}
      </h2>
    </div>
    <hr class="division-line" />
    <div class="w-full px-5 lg:flex">
      <div class="w-1/2 max-sm:w-full space-y-2 text-lg pt-4">
        {
          paragraphs.map((p: any) => {
            const linkRegex = /<a\s+(?:[^>]*?\s+)?href=(["'])(.*?)\1/i;
            const match = p.match(linkRegex);
  
            if (match) {
              return (
                <p class="mission-text  ">
                  <a class="link-style" href={match[2]}>
                    {p.replace(/<[^>]+>/g, "")}
                  </a>
                </p>
              );
            } else {
              return <p class="mission-text">{p}</p>;
            }
          })
        }
      </div>
      <div class="w-1/2  max-sm:w-full flex justify-center items-center">
        <img src={imageUrl} class="w-auto h-[35vh] object-contain ">
      </div>
    </div>
    
  </div>
      

      
</section>

<style>
  .division-line {
    background-color: green;
    height: 2px;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }

  .mission-title{
    font-weight: bold;
    font-size: 2.3rem;
  }

  .mission-text{
    font-size: 1.2rem;
    font-style: italic;
    line-height: 1.3; 
  }
</style>
