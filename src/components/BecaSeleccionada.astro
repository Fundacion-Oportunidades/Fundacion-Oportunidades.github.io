---
import becas from "../data/becas";
const { benefactor } = Astro.props;
const becasSeleccionada = becas.find((beca) => beca.link === benefactor);
---

<section>
  <div class="w-full">
    <h1 class="text-2xl font-bold">{becasSeleccionada?.name}</h1>
  </div>
  <div class="mt-3">
    <p>
      La Beca María Laura García busca apoyar el desarrollo profesional de
      alguien que cumpla con los siguientes requisitos
    </p>
  </div>
  <div class="w-full mt-2">
    <ul>
      {
        becasSeleccionada?.req.map((req) => (
          <li>
            <div
              class={`flex items-baseline ${Array.isArray(req.text) ? "flex flex-wrap" : ""}`}
            >
              <h1>{req.title}</h1>
              {Array.isArray(req.text) ? (
                <ul class="w-full p-0 m-0 " id="special-ul">
                  {req.text.map((textItem) => (
                    <li>
                      <h1>{textItem?.title}</h1>
                      <p>{textItem.text}</p>
                    </li>
                  ))}
                </ul>
              ) : (
                <p>{req.text}</p>
              )}
            </div>
          </li>
        ))
      }
    </ul>
  </div>
  <div class="w-full">
    <h1 class="font-bold">Requisitos (Fundación):</h1>
    <ul>
      {
        becasSeleccionada?.other.map((elemt) => (
          <li>
            <h1>{elemt?.title}</h1>
            <p>{elemt?.text}</p>
          </li>
        ))
      }
    </ul>
  </div>

  <div class="w-full">
    <h1 class="font-bold">Beneficios:</h1>
    <ul>
      {
        becasSeleccionada?.benefits.map((benef) => (
          <li class="list-item">
            <h1>{benef?.title}</h1>
            <p>{benef?.text}</p>
          </li>
        ))
      }
    </ul>
  </div>
  <div class="w-full max-sm:flex max-sm:justify-center max-sm:mt">
    <button class="flex items-center justify-center nav-main-option">
      <span
        class="login-button py-2 px-5 bg-green-600 hover:bg-green-700 focus:ring-green-500 focus:ring-offset-green-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 rounded-lg"
      >
        <a
          href="https://docs.google.com/forms/d/e/1FAIpQLSdP8Wf8dEGuHzAKKy_6jTs7qUbiwRyXdg_KWXR6jyJ16iXbUQ/viewform?usp=sf_link"
        >
          Solicitá tu beca
        </a>
      </span>
    </button>
  </div>

  <style>
    ul {
      display: block;
      list-style-type: disc;
      margin-block-start: 0em;
      margin-block-end: 1em;
      margin-inline-start: 0px;
      margin-inline-end: 0px;
      padding-inline-start: 40px;
      unicode-bidi: isolate;
    }

    #special-ul {
      margin-block-start: 0em;
      margin-block-end: 0em;
      margin-inline-start: 0px;
      margin-inline-end: 0px;
      list-style-type: square;
    }

    li::marker {
      color: #48a750;
      font-size: x-large;
    }

    p {
      font-family: "Libre Baskerville", sans-serif;
    }
  </style>
</section>
