---
const { imageUrl, name, rank } = Astro.props;
---

<div class="council-card">
  <img class="council-card-image" src={imageUrl} alt={name} />
  <div class="council-card-text">
    <p class="council-card-name">{name}</p>
    <p class="council-card-rank">{rank}</p>
  </div>
</div>

<style>
  .council-card {
    /* border: 1px solid green; */
    height: 400px;
    width: 250px;
    border-radius: 15px;
    font-family: "Open Sauce Sans";
    margin: 1rem;
    background-color: rgb(239, 239, 239);
  }
  .council-card-image {
    border-radius: 15px 15px 0 0;
    height: 330px;
  }
  .council-card-text {
    display: flex;
    justify-content: center;
    flex-direction: column;
    text-indent: 1rem;
    padding-top: 10px;
  }
  .council-card-name {
    font-weight: bold;
    font-size: 1.2rem;
  }
  .council-card-rank {
    font-size: 0.9rem;
    font-style: italic;
  }
</style>
