---
import type { Companies } from "../types/types";
import companies from "../data/companies";

interface Props extends Companies {}
---

<section class="companies-container">
  <p class="companies-text">Empresas que conf√≠an en nosotros:</p>
  <div class="empresas-logos">
    {
      companies.map((c) => (
        <a href={c.url} target="_blank">
          <img src={c.imageUrl} alt={c.imageAlt} class="companies-img" />
        </a>
      ))
    }
  </div>
</section>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=Open+Sauce+Sans&display=swap");

  .companies-container {
    text-align: center;
    padding: 1rem;
    font-family: "Libre Baskerville", serif;
    font-size: 1.5rem;
    font-weight: bold;
  }

  img {
    opacity: 0.8;
  }

  button {
    background-color: grey;
    color: white;
    padding: 10px 20px;
    border: none;
    height: 2rem;
    border-radius: 4px;
    cursor: pointer;
    display: block;
    margin: 1rem auto;
  }

  button:hover {
    background-color: #45a049;
  }

  .empresas-logos {
    display: flex;
    align-items: center;
    justify-content: space-evenly;
    flex-direction: row;
  }

  .empresas-logos img {
    padding: 1rem;
    max-height: 6rem;
    display: inline;
    transition: transform 0.3s;
  }

  .empresas-logos img:hover {
    opacity: 1;
    transform: scale(1.1, 1.1);
  }

  a {
    text-decoration: none;
  }

  @media screen and (max-width: 1100px) {
    /* .companies-img {
      height: 2.3rem;
    } */
  }
  @media screen and (max-width: 800px) {
    .companies-text {
      font-size: 1rem;
    }
  }
</style>
