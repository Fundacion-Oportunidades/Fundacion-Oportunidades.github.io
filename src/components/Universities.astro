---
import type { Universities } from "../types/types";
import universities from "../data/universities";

interface Props extends Universities {}
---

<section class="universities-container">
  <p>Universidades que ponen sus becas a disposici√≥n:</p>
  <div class="universidades-logos">
    {
      universities.map((u) => (
        <a href={u.url} target="_blank">
          <img src={u.imageUrl} alt={u.imageAlt} />
        </a>
      ))
    }
  </div>
  <a href="/site/work_with_us_universities">
    <button>Sumate a cambiarle la realidad a una persona</button>
  </a>
</section>

<style>
  a {
    text-decoration: none;
  }
  .universities-container {
    text-align: center;
    padding: 20px;
    font-family: "Arial", sans-serif;
    font-size: 20px;
    line-height: 1.5;
    max-width: 80ch;
  }

  .universidades-logos {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-direction: row;
    margin-top: 20px;
  }

  .universidades-logos img {
    margin: 1rem;
    max-height: 5rem;
    display: inline;
    background-color: transparent;
    transition: transform 0.3s;

    opacity: 0.8;
  }

  .universidades-logos img:hover {
    opacity: 1;
    transform: scale(1.1, 1.1);
  }

  button {
    background-color: grey;
    color: white;
    padding: 10px 20px;
    border: none;
    height: 2rem;
    border-radius: 4px;
    cursor: pointer;
    display: block;
    margin: 1rem auto;
  }

  button:hover {
    background-color: #45a049;
  }
</style>
