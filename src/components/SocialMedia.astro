---
import type { SocialMediaTypes } from "../types/types";
import socialMediaItems from "../data/socialMedia";

interface Props extends SocialMediaTypes {}
---

<section class="social-media-container">
  <ul class="icons-container">
    {
      socialMediaItems.map((s) => (
        <li>
          <a href={s.url} target="_blank">
            <img
              src={s.imageUrlInactive}
              alt={s.imageAlt}
              class={`social-icon ${s.imageAlt}`}
            />
          </a>
        </li>
      ))
    }
  </ul>
  <div class="button-container">
    <a href="/site/register">
      <button>Registrate ac√° para pedir tu beca</button>
    </a>
  </div>
</section>

<style>
  .social-media-container {
    display: flex;
    justify-content: space-between;
    background-color: #f2f2f2;
    align-items: center;
    width: 100vw;
  }
  .icons-container {
    margin-left: 6rem;
  }

  ul {
    list-style-type: none;
    padding: 0;
    display: flex;
  }

  li {
    margin: 0 10px;
  }

  a {
    text-decoration: none;
  }

  img.social-icon {
    width: 30px;
    height: 30px;
  }

  img.facebook:hover {
    content: url("https://res.cloudinary.com/dsblswewr/image/upload/v1685355460/face_azul_g84iel.png");
  }

  img.twitter:hover {
    content: url("https://res.cloudinary.com/dsblswewr/image/upload/v1685355461/twitter_color_wozb2b.png");
  }

  img.youtube:hover {
    content: url("https://res.cloudinary.com/dsblswewr/image/upload/v1685355461/youtube_rojo_acijb4.png");
  }

  img.linkedin:hover {
    content: url("https://res.cloudinary.com/dsblswewr/image/upload/v1685355461/ln_azul_dqnmwn.png");
  }

  img.instagram:hover {
    content: url("https://res.cloudinary.com/dsblswewr/image/upload/v1685355460/insta_color_mobgba.png");
  }

  .button-container {
    padding-left: 5rem;
  }

  button {
    background-color: grey;
    color: white;
    padding: 10px 20px;
    border: none;
    height: 2rem;
    border-radius: 4px;
    cursor: pointer;
    margin-right: 5rem;
  }

  button:hover {
    background-color: #45a049;
  }
</style>
