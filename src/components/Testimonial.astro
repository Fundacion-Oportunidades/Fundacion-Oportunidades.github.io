---
const { imageUrl, imageAlt, text, signature } = Astro.props;
---

<section class="testimonials-container">
  <div class="testimonial">
    <img src={imageUrl} alt={imageAlt} class="testimonial-image" />
    <span class="testimonial-text-container">
      <p class="testimonial-text">{text}</p>
      <p class="testimonial-signature">{signature}</p>
    </span>
  </div>
</section>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=Open+Sauce+Sans&display=swap");

  .testimonials-container {
    display: flex;
    margin: 2rem;
    border-radius: 0 2rem 0 2rem;
    width: 90vw;
    background-color: #efefef;
    transition: all 0.3s ease;
  }

  .testimonials-container:hover {
    box-shadow: 0px 8px 16px 0px #7bcb79;
  }

  .testimonial {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .testimonial-image {
    width: 40rem;
    border-radius: 0 0 0 2rem;
  }

  .testimonial-text-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
  }

  .testimonial-text {
    padding: 0 3rem 0 3rem;
    font-family: "Open Sauce Sans", sans-serif;
    font-style: italic;
    font-size: 1.5rem;
    text-align: center;
    border-radius: 1rem 0 1rem 0;
    line-height: 4rem;
  }
  .testimonial-signature {
    font-family: "Libre Baskerville", serif;
    font-size: 2rem;
  }
</style>
