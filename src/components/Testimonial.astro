---
const { imageUrl, imageAlt, text, signature } = Astro.props;
---

<div class="flip-card">
  <div class="flip-card-inner">
    <div class="flip-card-front">
      <img class="flip-card-image" src={imageUrl} alt={imageAlt} />
    </div>
    <div class="flip-card-back">
      <p class="flip-card-text">{text}</p>
      <p class="flip-card-signature">{signature}</p>
    </div>
  </div>
</div>

<style>
  @import url("https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=Open+Sauce+Sans&display=swap");

  .flip-card {
    width: 500px;
    height: 300px;
    perspective: 1000px;
    margin: 2rem 5rem 2rem 5rem;
  }

  .flip-card-image {
    height: 320px;
    width: 500px;
  }

  .flip-card-inner {
    position: relative;
    width: 100%;
    height: 100%;
    text-align: center;
    transition: transform 0.6s;
    transform-style: preserve-3d;
  }

  .flip-card:hover .flip-card-inner {
    transform: rotateY(180deg);
  }

  .flip-card-front,
  .flip-card-back {
    position: absolute;
    width: 100%;
    height: 100%;
    backface-visibility: hidden;
    display: flex;
    align-items: center;
    justify-content: center;
    flex-direction: column;
    /* padding: 1rem; */
  }

  .flip-card-front {
    background-color: #bbb;
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .flip-card-back {
    background-color: rgb(74, 168, 81);
    color: white;
    transform: rotateY(180deg);
    display: flex;
    justify-content: center;
    align-items: center;
  }

  .flip-card-text {
    padding: 0 3rem 0 3rem;
    font-family: "Open Sauce Sans";
    font-style: italic;
    font-size: 1.2rem;
    text-align: center;
    margin-bottom: 1rem;
  }
  .flip-card-signature {
    font-family: "Libre Baskerville", serif;
    font-size: 1.5rem;
  }
  @media screen and (max-width: 1100px) {
    .testimonial-image {
      width: 100%;
      border-radius: 0 3rem 0 0;
    }
    .testimonial-text {
      font-size: 1rem;
      text-align: center;
      line-height: 1rem;
    }
    .testimonial {
      display: flex;
      flex-direction: column;
    }
    .testimonial-signature {
      font-size: 1.5rem;
    }
  }
  @media screen and (max-width: 900px) {
  }
</style>
