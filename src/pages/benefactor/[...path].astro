---
import AsideBecas from "../../components/AsideBecas.astro";
import Layout from "../../layouts/Layout.astro";
import BecasDisponibles from "../../components/BecasDisponibles.astro";
import UniversidadSeleccionada from "../../components/UniversidadSeleccionada.astro";
import Benefactores from "../../components/Benefactores.astro";
import BenefactorSingle from "../../components/BenefactorSingle.astro";

export function getStaticPaths() {
  return [
    { params: { path: "/maria-laura-garcia" } },
    { params: { path: undefined } },
  ];
}
const { path } = Astro.params;
---

<Layout title="Benefactores">
  <section class="md:flex">
    <AsideBecas />
    <div class="min-h-[50vh] w-[80%] max-sm:w-[100%] max-sm:px-4 mt-6 px-10">
      <Benefactores />
      <div class="w-full mt-5">
        <div class="division-line"></div>
        <BenefactorSingle path={path} />
      </div>
    </div>
  </section>
</Layout>
