---
import AsideBecas from "../../components/AsideBecas.astro";
import Layout from "../../layouts/Layout.astro";
import BecasDisponibles from "../../components/BecasDisponibles.astro";
import UniversidadSeleccionada from "../../components/UniversidadSeleccionada.astro"

export function getStaticPaths() {
  return [
    {params: {path: 'uai'}},
    {params: {path: 'udemm'}},
    {params: {path: undefined }}
  ]
}
const { path } = Astro.params;
---

<Layout title="Becas disponibles">
  <section class="lg:flex">
    <AsideBecas/>
    <div class="min-h-[30vh] w-[80%] max-sm:w-[100%] max-sm:px-4 mt-6 px-10">
      <h1 class="text-4xl font-bold">Becas disponibles</h1>
        <div class="division-line"></div>
        <BecasDisponibles />
        <div class="mt-5">
          <UniversidadSeleccionada universidad={path} />
        </div>
    </div>
  </section>
</Layout>