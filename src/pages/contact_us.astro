---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Contact Us">
  <div>
    <form class="w-full max-w-sm contact-us-form">
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-6"
            for="inline-full-name"
          >
            Nombre
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-full-name"
            type="text"
          />
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-6"
            for="inline-full-name"
          >
            E-mail
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-full-name"
            type="text"
          />
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-6"
            for="inline-full-name"
          >
            Asunto
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-full-name"
            type="text"
          />
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-6"
            for="inline-full-name"
          >
            Mensaje
          </label>
        </div>
        <div class="md:w-2/3">
          <textarea
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-full-name"
            rows="5"></textarea>
        </div>
      </div>
    </form>

    <div class="button-container">
      <button
        class="button-submit py-2 px-4 bg-green-600 hover:bg-green-700 focus:ring-green-500 focus:ring-offset-green-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 rounded-lg margin-bottom-xl"
        type="button"
      >
        Enviar
      </button>
    </div>
  </div>
</Layout>
<style>
  .contact-us-form {
    font-family: "Open Sauce Sans";
    /* display: flex; */
    /* justify-content: center; */
    /* align-items: center; */
    /* flex-direction: column; */
    padding: 2rem 0 2rem 0;
    width: 70vw !important;
    /* border: 1px solid black; */
  }
  .button-submit {
    width: 10rem !important;
  }
  @media only screen and (max-width: 768px) {
    .contact-us-form {
      width: 90vw !important;
    }
  }
</style>
