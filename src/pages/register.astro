---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Formulario de Registro">
  <div class="sign-in-form-container">
    <form class="w-full max-w-sm sign-in-form">
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-6"
            for="inline-full-name"
          >
            Nombre
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-full-name"
            type="text"
          />
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-6"
            for="inline-full-name"
          >
            Apellido
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-full-name"
            type="text"
          />
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-6"
            for="inline-full-name"
          >
            E-mail
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-full-name"
            type="text"
          />
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-6"
            for="inline-full-name"
          >
            País de interés
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-full-name"
            type="text"
          />
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-6"
            for="inline-full-name"
          >
            Universidad de interés
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-full-name"
            type="text"
          />
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-6"
            for="inline-full-name"
          >
            Motivación
          </label>
        </div>
        <div class="md:w-2/3">
          <textarea
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-full-name"
            rows="5"></textarea>
        </div>
      </div>
      <div class="md:flex md:items-center mb-6">
        <div class="md:w-1/3">
          <label
            class="block text-gray-500 font-bold md:text-right mb-1 md:mb-0 pr-4"
            for="inline-password"
          >
            Contraseña
          </label>
        </div>
        <div class="md:w-2/3">
          <input
            class="appearance-none border-2 border-gray-200 rounded w-full py-2 px-4 text-gray-700 leading-tight focus:outline-none focus:bg-white focus:border-green-500"
            id="inline-password"
            type="password"
            placeholder="******************"
          />
        </div>
      </div>
    </form>
    <div class="md:flex md:items-center">
      <div class="md:w-2/3">
        <button
          class="button-submit py-2 px-4 bg-green-600 hover:bg-green-700 focus:ring-green-500 focus:ring-offset-green-200 text-white w-full transition ease-in duration-200 text-center text-base font-semibold shadow-md focus:outline-none focus:ring-2 focus:ring-offset-2 rounded-lg"
          type="button"
        >
          Registrarse
        </button>
      </div>
    </div>
  </div>
</Layout>

<style>
  .sign-in-form-container {
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
    padding: 2rem 0 2rem 0;
    width: 70vw !important;
    /* border: 1px solid black; */
  }
  .sign-in-form {
    font-family: "Open Sauce Sans";
  }
  .button-submit {
    width: 10rem !important;
  }

  @media only screen and (max-width: 768px) {
    .sign-in-form-container {
      width: 90vw !important;
    }
  }
</style>
