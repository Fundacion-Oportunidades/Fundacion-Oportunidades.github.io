<style>
  @font-face{
    font-family: "Mrs.Eaves";
    src:url('/fonts/mrs-eaves/MRSEAV~5.TTF');
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }
  body{
    font-family: "Mrs.Eaves";
  }
  .testimonials-container {
    display: flex;
    align-items: center;
    justify-content: center;
    flex-wrap: wrap;
    width: 100vw;
    transition: all 0.3s ease;
    margin-top: 2rem;
  }
  .division-line {
    background-color: green;
    margin-top: 1rem;
    margin-right: 1.5rem;
    height: 2px;
  }

  .title {
    font-size: 2rem;
    font-weight: bold;
    font-size: 2.3rem;
    margin: 2rem 0 0 0;
  }
  @media only screen and (max-width: 768px) {
    .title {
      font-size: 1.2rem;
      font-weight: bold;
      text-align: center;
    }
    .division-line {
      margin: 1rem 0 0 0;
    }
  }
</style>
