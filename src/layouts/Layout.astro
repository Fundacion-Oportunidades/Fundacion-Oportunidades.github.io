---
import NavBar from "../components/NavBar.astro";
import Footer from "../components/Footer.astro";

import "@fontsource/open-sauce-sans";
import OfferHead from "../components/OfferHead.astro";
export interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" /><meta
      name="viewport"
      content="width=device-width, initial-scale=1.0"
    />
    <link
      rel="icon"
      type="image/svg+xml"
      href="https://res.cloudinary.com/dsblswewr/image/upload/v1689289454/opor_ico_250_dnkc6x.png"
    />
    <link
      rel="stylesheet"
      href="https://fonts.googleapis.com/css2?family=Libre+Baskerville&family=Open+Sauce+Sans&display=swap"
    />

    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <!-- <OfferHead /> -->
    <NavBar />
    <slot />
    <Footer />
  </body>
</html>

<style is:global>
  html {
  }
  body {
    /* background-color: rgb(239, 239, 239); */
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
</style>
