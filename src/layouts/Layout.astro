<style is:global>
  html {
  }
  .division-line {
    background-color: green;
    height: 2px;
    margin-top: 1rem;
    margin-bottom: 1rem;
  }
  body {
    /* background-color: rgb(239, 239, 239); */
    margin: 0;
    padding: 0;
    display: flex;
    justify-content: center;
    align-items: center;
    flex-direction: column;
  }
  @font-face {
    font-family: "Mrs.Eaves", Arial, sans-serif;
    src: url("/fonts/mrs-eaves/MRSEAV~5.TTF");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "OpenSauceSans", sans-serif;
    src: url("/fonts/open-sauce/OpenSauceSans-Regular.ttf");
    font-weight: normal;
    font-style: normal;
    font-display: swap;
  }

  @font-face {
    font-family: "OpenSauceSansBold", bold, sans-serif;
    src: url("/fonts/open-sauce/OpenSauceSans-Bold.ttf");
    font-weight: bold;
    font-style: normal;
    font-display: swap;
  }
  body {
    font-family: "Mrs.Eaves";
  }
  h1,
  h2,
  h3,
  h4,
  h5,
  h6 {
    font-family: "Libre Baskerville", sans-serif;
  }
  p,
  span,
  a,
  li,
  label,
  button {
    font-family: "OpenSauceSans", sans-serif;
  }
</style>
